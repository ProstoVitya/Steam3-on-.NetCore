@page
@model Steam3.RazorPages.Pages.GamePages.StatisticsModel
@{
    ViewData["Title"] = "Statistics";
}

<div>
    <form method="get">
        <div class="container">
        <div class="row">
            <div class="col display-4">
                <a class="nav-link text-dark" asp-page-handler="OnGet" asp-route-sortBy="@SortBy.Name">Игра</a> 

            </div>
            <div class="col display-4">
                <div class="row text-center">
                    <div class="col">
                        <a class="nav-link text-dark" asp-page-handler="OnGet" asp-route-sortBy="@SortBy.Count">Продано</a> 
                    </div>
                    <div class="col">
                        <a class="nav-link text-dark" asp-page-handler="OnGet" asp-route-sortBy="@SortBy.Earnings">Заработано</a>
                        
                    </div>
                </div>
            </div> 
        </div>
        <hr/>
    </div>
    </form>
    
    @foreach (var game in Model.gamesStatistic)
    {
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3 class="display-4">@game.Key.Name</h3>
                    <h3 class="display-6">@game.Key.CreatedBy</h3>
                </div>
                <div class="col align-self-center display-6">
                    <div class="row text-center">
                        <div class="col">
                            @game.Value[0]
                        </div>
                        <div class="col">
                            @game.Value[1] руб
                        </div>
                    </div>
                </div> 
            </div>
        </div>
        <hr/>
    }
</div>

